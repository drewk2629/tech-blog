<article class="post">
    <div class="post-header">
        <a class="post-title" href="/post/{{id}}" target="_blank">{{title}}</a>
        <span class="post-data">Posted by {{user.username}} on {{format_date created_at}}</span>
    </div>
    <div class="post-content">
        <p> {{post_content}}</p>
    </div>
    </article> 